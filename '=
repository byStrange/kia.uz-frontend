<script setup lang="tsx">
import { UISlideView } from '#components'
import type { ModelConfiguration } from '~/types'

const optionsSwiper = ref<InstanceType<typeof UISlideView> | null>(null)
const optionsSwiperActiveIndex = computed(() => {
  return optionsSwiper.value ? optionsSwiper.value.swiper?.activeIndex || 0 : 0
})

const { bounding } = useContainer()

const { data } = await useFetch('/api/model/sonata')

const hasFeature = (feature: string, configuration: ModelConfiguration) => {
  return configuration.features.some((f) => f.label === feature)
}

const configurationPropertySwipers =
  useTemplateRef<InstanceType<typeof UISlideView>[]>('confPropsSwiper')

const configurationsSwiper = useTemplateRef('confSwiper')

watch(configurationPropertySwipers, () => {
  configurationPropertySwipers.value?.forEach(({ swiper }) => {
    console.log(swiper.value)
  })
})

onMounted(() => {
  console.log(configurationPropertySwipers.value)
  console.log(configurationsSwiper)
})
</script>
<template>
  <div class="col-span-9">
    <div class="bg-background flex w-full relative 2xl:bg-white">
      <UISlideView
        ref="configurationsSwiper"
        navigation-type="sm"
        :paginator="false"
        :data="data?.model.configurations || []"
        class="w-full"
        swiper-slide-class="!w-fit"
        :slides-offset-before="15"
        :slides-offset-after="15"
        :breakpoints="{
          768: { slidesOffsetBefore: 37, slidesOffsetAfter: 37 },
          1440: { slidesOFfsetBefore: 20, slidesOffsetAfter: 20 },
        }"
        navigiation-mode="oneside-left"
      >
        <template #slide="{ item }">
          <div
            class="p-4 md:p-5 w-[172px] md:w-[232px] shrink-0 overflow-auto 2xl:w-[220px] hoverable:border hoverable:border-transparent hoverable:hover:border-primary hoverable:transition-colors cursor-pointer"
          >
            <div>
              <h1 class="flex items-center font-semibold">
                <span class="text-primary text-base">{{ item.name }}</span>
                <UITickToRight class="text-pretty" />
              </h1>
              <p class="mt-1 text-caption text-xs">
                {{ item.engine }}
              </p>
            </div>
            <h2
              class="space-x-1 md:mt-4 mt-3 text-base font-semibold text-primary"
            >
              <span>{{ item.price }}</span>
              <span>сум</span>
            </h2>
          </div>
        </template>

        <template #navigation>
          <UISliderShade d="right" />
        </template>
      </UISlideView>
    </div>

    <UIContainer
      class="pt-5 pb-12 md:pt-10 md:pb-15 2xl:px-0 2xl:max-w-none 2xl:pl-grid-12-gap 2xl:pr-[--padding-x]"
      :style="{
        '--padding-x': bounding.x.value + 'px',
      }"
    >
      <PrimeAccordion value="0" class="divide-y-2 divide-protection">
        <template #collapseicon>
          <UITickToTop class="min-w-5" />
        </template>
        <template #expandicon>
          <UITickToBottom class="min-w-5" />
        </template>

        <PrimeAccordionPanel
          v-for="[tab, features] in Object.entries(data?.groupedFeatures || {})"
          :key="tab"
          :value="tab"
          unstyled
        >
          <PrimeAccordionHeader
            unstyled
            class="py-3 flex justify-between w-full items-center text-base font-semibold text-primary text-left md:py-4 md:text-lg 2xl:text-2xl"
            >{{ tab }}</PrimeAccordionHeader
          >
          <PrimeAccordionContent unstyled>
            <div class="divide-y divide-protection">
              <div class="py-4" v-for="feature in features">
                <p class="text-sm">{{ feature.label }}</p>
                <div class="mt-3.5 flex">
                  <ClientOnly>
                    <UISlideView
                      :navigation="false"
                      :breakpoints-enabled="false"
                      :paginator="false"
                      :data="data?.model.configurations || []"
                      class="w-full"
                      swiper-slide-class="!w-fit"
                      ref="confPropsSwiper"
                    >
                      <template #slide="prop">
                        <div
                          class="w-[172px] md:w-[232px] shrink-0 overflow-auto 2xl:w-[220px]"
                        >
                          <div
                            class="size-2.5 bg-primary rounded-full"
                            v-if="hasFeature(feature.label, prop.item)"
                          ></div>
                          <div v-else>-</div>
                        </div>
                      </template>
                    </UISlideView>
                  </ClientOnly>
                </div>
              </div>
            </div>
          </PrimeAccordionContent>
        </PrimeAccordionPanel>
      </PrimeAccordion>
    </UIContainer>
  </div>
